echo "$VAULT_TOKEN" | safe auth token
safe read secret/handshake

if [[ "${KEEP_STATE}" == "true" && -d "${WORKDIR}" ]] ; then
  header "Updating Genesis deployment directory for $KIT_SHORTNAME v$VERSION..."
  genesis -v
  if [[ -n "${TAG_ROOT:-}" ]] ; then
