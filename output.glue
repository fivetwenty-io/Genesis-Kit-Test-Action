        echo "::group::Checking specifications for breaking changes"
        chmod -R +x ${{ github.action_path }}/ci/scripts
        ${{ github.action_path }}/ci/scripts/actions/check-specs.sh
        echo "::endgroup::"

    - name: Check for breaking changes
